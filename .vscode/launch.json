{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Chrome",
      "type": "pwa-chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/AngularWeb",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${workspaceFolder}/AngularWeb/src/*",
        "webpack:///*": "${workspaceFolder}/AngularWeb/*"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Launch Angular App (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/AngularWeb",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${workspaceFolder}/AngularWeb/src/*",
        "webpack:///*": "${workspaceFolder}/AngularWeb/*"
      },
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "ng serve (debug)"
    }
  ]
}
