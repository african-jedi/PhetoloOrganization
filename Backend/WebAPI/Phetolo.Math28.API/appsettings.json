{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AngularHealthCheckUrl": "http://localhost:4200",
  "ConnectionStrings": {
    "Redis": "localhost:6379",
    "Math28DB":"Host=localhost;Port=5433;Database=Phetolo.Math28DB;Username=postgres;Password=postgres"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName"],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{CorrelationId}] [{Level:u3}] [{MachineName}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "c:/logs/log-.txt",
          "rollingInterval": "Month",
          "retainedFileCountLimit": 31,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{CorrelationId}] [{Level:u3}] [{MachineName}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
